# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/sharing_platform
DATABASE_TEST_URL=postgresql+asyncpg://username:password@localhost:5432/sharing_platform_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Security
SECRET_KEY=your-super-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# SMS Verification (Twilio example)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
MAX_USERS_PER_BUILDING=100
CREDIT_INITIAL_BALANCE=10
FOOD_POST_EXPIRY_HOURS=24

# Admin Settings
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure_admin_password
ADMIN_TELEGRAM_IDS=123456789,987654321

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# File Storage (Local or S3)
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_BUCKET_NAME=sharing-platform-files
AWS_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_BURST=10